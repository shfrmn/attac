{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "removeComments": false,
    "baseUrl": "./src",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "noImplicitOverride": true,
    "noEmit": true,
    "declaration": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noUncheckedIndexedAccess": true,
    "paths": {
      "#src/*": ["./src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
